#!/bin/sh


echo "\n----------------------"
echo "\e[94mHello investigators, we are the Phylodynamics team.\n" | pv -qL 20


echo "Now, letâ€™s run the analysis " | pv -qL 40 

while true; do
    read -p "Type Yes to start the analysis" yn
        case $yn in
            [Yy]* )  echo "\n We will use BEAST2.\e[0m";
                     java -jar /files/BDMM-Prime.jar -overwrite /files/example.xml;
            echo "\n\e[94mYou can find the results of the analysis in your CONFIDENTIAL folder. Open with tracer and the tree.";
                     break;;
            [Nn]* ) echo "\nOk. Are then you ready for the press conference? They want answers to the origin and speed of disease transmission of MOO-vi. Continue to step 7."; exit;;
            * ) echo "\nPlease answer yes or no.";;
        esac
done


echo "\nPlease, continue to the final step.";
echo "\e[0m" 
